extends layout

include mixins/_postCard

block content     
    .home__wrapper 
        .home__profile.profile-bar
            if(user)
                .profile-bar__avatar.avatar(style=`background-image: url('uploads/${user.photo}');`)
                .profile-bar__top
                    h4= user.name
                .profile-bar__bottom

        .home__user-content
            .home__posts-wrapper
                if user
                    each post in posts
                        +postCard(post)
            .home__tracking-results.tracking-results
                .tracking-results__card
                .tracking-results__card
                    svg.tracking-results__arc

        
    