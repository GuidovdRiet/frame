mixin postCard(post)
    .post-card
        .avatar(style=`background-image: url('/uploads/${user.photo}')`)
        
        h1.post-card__title= `${post.title},`
        p= post.body
        
        .post-card__details
                p= user.name 
                p 20 minutes ago 
