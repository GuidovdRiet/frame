mixin userCard(user, posts)
    .user-card__content
        .user-card-avatar__wrapper 
            .user-card__avatar.avatar(style=`background-image: url('/uploads/${user.photo}');`)
        h1= user.name
        h2 Better be good
    .user-card__stats
        .stats-wrapper
            h4 following
            h2= user.following.length
        .stats-wrapper
            h4 followers
            h2= user.followers.length
        .stats-wrapper
            h4 posts
            h2= posts.length
        .stats-wrapper
            h4 average
            h2 9.6
    .user-card-btn__wrapper-squared 
        a(href="#")
            .btn.btn__large.btn__ghost
                p follow
        a(href="#")
            .btn.btn__large.btn__ghost
                    p message
    .user-card-btn__wrapper-rounded
        .btn.btn__circle
            a(href="#")
                != h.icon('edit')